<form class='container signup-form'>
    <h3>Enter your credentials to create an account</h3>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email-signup" value="{{this.email}}" placeholder="email@email.com"
                name="email">
            <label for="email-signup">Email</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="username-signup" value="{{this.username}}" placeholder="Username"
                name="username">
            <label for="username-signup">Username</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password-signup" value="{{this.password}}" placeholder="Password"
                name="password">
            <label for="password-signup">Password</label>
        </div>
    </div>
    <div class="col-6 d-grid">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>
